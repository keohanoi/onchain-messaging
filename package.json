{
  "name": "onchain-msg",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "hardhat test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && hardhat test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:contracts": "playwright test e2e/contracts.spec.ts",
    "test:e2e:app": "playwright test e2e/app.spec.ts",
    "test:e2e:setup": "./scripts/e2e-setup.sh",
    "build": "tsc",
    "node": "hardhat node",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "export:abis": "node scripts/export-abis.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@playwright/test": "^1.58.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.56.0",
    "hardhat": "^2.22.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "@openzeppelin/contracts": "^5.0.2",
    "arweave": "^1.15.5",
    "circomlibjs": "^0.1.7",
    "ethers": "^6.11.1",
    "ipfs-http-client": "^60.0.1",
    "poseidon-solidity": "^0.0.5"
  }
}
